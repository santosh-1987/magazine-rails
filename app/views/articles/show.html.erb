    <div class="jumbotron">
      <h2 class="text-center"><%= @article.title %></h2>
      <p>
        <br/>
        <%= @article.body %>
      </p>
      <p class="pull-right">
        <strong>By:</strong>
        <%= @article.author %>
      </p>
      <p>
        <strong>Magazine:</strong>
        <%= @article.journal.name %>
      </p>
