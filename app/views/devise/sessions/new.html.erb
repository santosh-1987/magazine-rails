<h2>Log in</h2>
<div class="col-lg-12">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name),class: "form-horizontal") do |f| %>
      <div class="form-group">
        <label for="inputEmail" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10"><%= f.email_field :email, autofocus: true %></div>
      </div>

      <div class="form-group">
        <label for="inputPassword" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10"><%= f.password_field :password, autocomplete: "off" %></div>
      </div>

      <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="checkbox">
                <label>
                  <%= f.check_box :remember_me %> Remember me
                </label>
              </div>
            </div>
          </div>
      <% end -%>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Log in",class: "btn btn-default" %>
        </div>
      </div>
  <% end %>
</div>
<div class="col-sm-12">
  <%= render "devise/shared/links" %>
</div>